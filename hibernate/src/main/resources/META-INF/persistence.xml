<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
	version="2.0">

	<persistence-unit name="hibernate.learn">
		<!--description>Learning Hibernate</description-->

		<!--class>Orchestration</class-->

		<properties>
			<property name="javax.persistence.jdbc.url" value="jdbc:oracle:thin:@ttdev12.ie.oracle.com:1521:TTDEV12" />
			<property name="javax.persistence.jdbc.user" value="ORCHESTRATIONS_JOHAN" />
			<property name="javax.persistence.jdbc.password" value="ORCHESTRATIONS_JOHAN" />
			<property name="javax.persistence.jdbc.driver" value="oracle.jdbc.OracleDriver" />
			<property name="hibernate.dialect" value="org.hibernate.dialect.Oracle10gDialect" />
			<property name="hibernate.show_sql" value="true" />
			<property name="hibernate.hbm2ddl.auto" value="create" />
		</properties>

	</persistence-unit>

</persistence>
